# =============================================================================
# HDFView Build Configuration Example Template
# Copy this file to build.properties in the root directory and customize
# =============================================================================

# -----------------------------------------------------------------------------
# Native Library Configuration
# -----------------------------------------------------------------------------
# HDF5 library directory (REQUIRED - build will fail if missing)
# Environment variable fallback: ${env.HDF5_HOME}/lib
hdf5.lib.dir=/usr/local/lib
#hdf5.lib.dir=${env.HDF5_HOME}/lib
#hdf5.lib.dir=/opt/homebrew/lib
#hdf5.lib.dir=C:/Program Files/HDF_Group/HDF5/1.14.0/lib

# HDF5 plugin directory (REQUIRED for full functionality)
# Environment variable fallback: ${env.HDF5_HOME}/lib/plugin
hdf5.plugin.dir=/usr/local/lib/hdf5/plugin
#hdf5.plugin.dir=${env.HDF5_HOME}/lib/plugin
#hdf5.plugin.dir=/opt/homebrew/lib/hdf5/plugin
#hdf5.plugin.dir=C:/Program Files/HDF_Group/HDF5/1.14.0/lib/plugin

# HDF4 library directory (OPTIONAL - soft validation only)
# Environment variable fallback: ${env.HDF4_HOME}/lib
# Comment out to disable HDF4 support
hdf.lib.dir=/usr/local/lib
#hdf.lib.dir=${env.HDF4_HOME}/lib
#hdf.lib.dir=/opt/homebrew/lib
#hdf.lib.dir=C:/Program Files/HDF_Group/HDF/4.3.1/lib

# -----------------------------------------------------------------------------
# Platform-Specific Runtime Configuration
# -----------------------------------------------------------------------------
# Platform library path (auto-detected by Maven profiles)
# Linux: LD_LIBRARY_PATH, Windows: PATH, macOS: DYLD_LIBRARY_PATH
platform.hdf.lib=${env.LD_LIBRARY_PATH}

# -----------------------------------------------------------------------------
# Build Configuration
# -----------------------------------------------------------------------------
# Enable debugging information in compiled classes
build.debug=true
build.antoutput.append=false
build.log.level=info
build.log.level.run=trace
build.log.level.test=
build.object.test=

# Uncomment to enable JaCoCo code coverage analysis
#build.jacoco=true

# -----------------------------------------------------------------------------
# Platform-Specific Packaging Configuration (optional)
# -----------------------------------------------------------------------------
# macOS JRE configuration for packaging
install.mac.jre=${env.OSX_JRE_HOME}
jre.dir.name=${env.OSX_JRE_NAME}

# Documentation directory for Maven site generation
userguide.dir=/path/to/UsersGuide
#userguide.dir=${env.HDFVIEW_DOCS_DIR}

# Windows installer tools (WiX) for Maven packaging
wix.dir=${env.WIX}/bin

# -----------------------------------------------------------------------------
# Common Installation Paths by Platform
# -----------------------------------------------------------------------------
# Linux (Ubuntu/Debian):
#   System packages: /usr/lib/x86_64-linux-gnu
#   Local builds: /usr/local/lib
#   Custom installs: /opt/hdf5/lib, /opt/hdf4/lib
#
# Linux (CentOS/RHEL):
#   System packages: /usr/lib64
#   Local builds: /usr/local/lib64
#
# macOS:
#   Homebrew: /opt/homebrew/lib (Apple Silicon) or /usr/local/lib (Intel)
#   MacPorts: /opt/local/lib
#   Manual builds: /usr/local/lib
#
# Windows:
#   Default install: C:/Program Files/HDF_Group/HDF5/1.14.0/lib
#   CMake install: C:/Program Files (x86)/HDF_Group/HDF5/1.14.0/lib
#   Visual Studio: depends on build configuration
#
# Environment Variables:
#   HDF5_HOME - Root directory of HDF5 installation
#   HDF4_HOME - Root directory of HDF4 installation (optional)
#   HDFVIEW_DOCS_DIR - Documentation directory path